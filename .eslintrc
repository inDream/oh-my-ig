{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "extends" : [
    "eslint:recommended",
    "airbnb-base"
  ],
  "globals": {
    "A": true,
    "chrome": true,
    "ChromePromise": true,
    "DB": true,
    "Fetcher": true,
    "M": true,
    "Matcher": true,
    "Media": true,
    "moment": true
  },
  "overrides": {
    "files": [ "gulpfiles.js" ],
    "env": { "commonjs": true, "es6": true, "node": true }
  },
  "plugins": [
    "import"
  ],
  "rules" : {
    "arrow-body-style" : 1,
    "class-methods-use-this": 0,
    "linebreak-style": 0,
    "no-console": 0,
    "no-empty": [2, { "allowEmptyCatch": true }],
    "no-param-reassign": [2, { "props": false }],
    "no-shadow": [2, { "allow": ["e"] }],
    "no-underscore-dangle": [2, { "allow": ["__typename"] }]
  },
  "settings": {
    "import/resolver": "node"
  }
}
